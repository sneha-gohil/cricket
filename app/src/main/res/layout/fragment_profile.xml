<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".profile"
    android:padding="16dp">

    <!-- Name Group (LinearLayout) -->
    <LinearLayout
        android:id="@+id/nameGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true">

        <!-- Name TextView -->
        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <!-- Name EditText -->
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Enter your name"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <!-- Email Group (LinearLayout) -->
    <LinearLayout
        android:id="@+id/emailGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/nameGroup"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true">

        <!-- Email TextView -->
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            android:layout_gravity="center" />

        <!-- Email EditText -->
        <EditText
            android:id="@+id/email1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <!-- Contact Group (LinearLayout) -->
    <LinearLayout
        android:id="@+id/contactGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/emailGroup"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true">

        <!-- Contact TextView -->
        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textSize="16sp"
            android:layout_gravity="center" />

        <!-- Contact EditText -->
        <EditText
            android:id="@+id/contact1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Enter your contact"
            android:inputType="phone"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <!-- Age Group (LinearLayout) -->
    <LinearLayout
        android:id="@+id/ageGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/contactGroup"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true">

        <!-- Age TextView -->
        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textSize="16sp"
            android:layout_gravity="center" />

        <!-- Age EditText -->
        <EditText
            android:id="@+id/age1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Enter your age"
            android:inputType="number"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

</RelativeLayout>
